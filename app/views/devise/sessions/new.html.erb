<%# cssはrecipe/new.cssを使用 %>
  
  <div class="new-recipe-contens">
  <header class="new-recipe-header">
     <%= link_to image_tag("kyo_rogo.png", class:"logo-image"), "/" %>
  </header>

  <div class="new-recipe-main">
    <div class="new-recipe-title">ログイン</div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
      <div class="input-field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autocomplete: "email" %>
      </div>

      <div class="input-field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン" %>
      </div>
    <% end %>
  </div>
</div>

<div class="render_devise">
  <%= render "devise/shared/links" %>
</div>