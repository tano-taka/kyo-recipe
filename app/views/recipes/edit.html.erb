<div class="new-recipe-contens">
  <header class="new-recipe-header">
    <%= link_to 'HOME画面へ戻る', root_path %>
  </header>


  <div class="new-recipe-main">
    <h1>レシピを投稿</h1>
    <%= form_with model: @recipe, local: true do |f| %>
    <%= render 'shared/error_messages', model: f.object %>

    <div></div>


    <div class="input-image">
      <%= f.label :image %><br />
      <%= f.file_field :image %>
    </div>

    <div class="input-image">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>

    <div class="input-image">
      <%= f.label :price %><br />
      <%= f.text_field :price %>
    </div>

    <div class="input-image">
      <%= f.label :procedure1 %><br />
      <%= f.text_field :procedure1 %>
    </div>

    <div class="input-image">
      <%= f.label :procedure2 %><br />
      <%= f.text_field :procedure2 %>
    </div>

    <div class="input-image">
      <%= f.label :procedure3 %><br />
      <%= f.text_field :procedure3 %>
    </div>

    <div class="input-image">
      <%= f.label :info %><br />
      <%= f.text_area :info %>
    </div>

    <%= f.submit "投稿する" ,class:"sell-btn" %>

  <% end %>
</div>