<header class='top-page-header'>

  <div class='nav'>
    <div class="logo-image-box">
      <%= link_to image_tag("kyo_rogo.png", class:"logo-image"), "/" %>
    </div>
    <div class="nav-right-box">
      <div class="recipe-post" >
        <%= link_to "レシピを投稿する", new_recipe_path, class:"recipe-post-button" %>
      </div>
      <ul class='nav-right'>
        <% if user_signed_in? %>
          <li><%= link_to "#{current_user.nickname}さん", "#", class: "user-nickname" %></li> 
          <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li> 
        <% else %>
          <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
          <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class='search-bar-contents'>
    <%= form_with(url: search_recipes_path, local: true, method: :get, class: "search-form") do |f| %>
      <%= f.text_field :keyword, placeholder: "タイトルから探す", class: "input-box"%>
      <%= f.submit"検索", class: "search-button" %>
    <% end %>
  </div>
</header>

